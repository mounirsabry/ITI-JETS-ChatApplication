<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<HBox alignment="CENTER" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="jets.projects.Controllers.SigninController">
   <children>
      <VBox alignment="CENTER" fillWidth="true" prefHeight="600.0" prefWidth="500.0" spacing="20.0" styleClass="sideBar" stylesheets="@../styles/homeScreenStyles.css" HBox.hgrow="ALWAYS">
         <children>
            <Region minHeight="30.0" prefHeight="15.0" prefWidth="779.0" />
            <HBox alignment="CENTER" spacing="0" style="-fx-background-color: transparent;" styleClass="primaryButton" stylesheets="@../styles/mainStyles.css">
               <children>
                  <ToggleButton fx:id="signinToggleButton" onAction="#handleSignInToggle" prefWidth="120.0" selected="true" style="-fx-background-radius: 15 0 0 15; -fx-padding: 10; -fx-background-color: white; -fx-text-fill: black; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.4), 8, 0.5, 0, 0);" styleClass="primaryButton" stylesheets="@../styles/mainStyles.css" text="Sign In" />
                  <ToggleButton fx:id="signUpToggleButton" onAction="#handleSignUpToggle" prefWidth="120.0" style="-fx-background-radius: 0 15 15 0; -fx-padding: 10; -fx-background-color: white; -fx-text-fill: black; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.4), 8, 0.5, 0, 0);" text="Sign Up" />
               </children>
            </HBox>
            <ImageView fitHeight="244.0" fitWidth="477.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/Untitled%20design.png" />
               </image>
            </ImageView>
            <TextField fx:id="phoneField" maxWidth="300.0" prefHeight="27.0" prefWidth="377.0" promptText="Phone Number" styleClass="textField" stylesheets="@../styles/mainStyles.css" />
            <PasswordField fx:id="passwordField" maxWidth="300.0" prefHeight="27.0" prefWidth="378.0" promptText="Password" styleClass="textField" stylesheets="@../styles/mainStyles.css" />
            <Button fx:id="signinButton" maxWidth="100.0" onAction="#handleSignInButton" prefWidth="200.0" styleClass="primaryButton" stylesheets="@../styles/mainStyles.css" text="Sign in" />
            <Region prefHeight="67.0" prefWidth="460.0" />
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
   </children>
</HBox>
