<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<HBox alignment="CENTER" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="jets.projects.Controllers.SigninController">
   <children>
      <Pane prefHeight="200.0" prefWidth="300.0" style="-fx-background-color: linear-gradient(to top, #9ad1d4, #80ced7, #007ea7);" HBox.hgrow="ALWAYS" />
      <VBox alignment="CENTER" fillWidth="true" prefHeight="600.0" prefWidth="500.0" spacing="20.0" style="-fx-padding: 20; -fx-background-color: white;" HBox.hgrow="ALWAYS">
         <children>
            <Region prefHeight="69.0" prefWidth="460.0" />
            <HBox alignment="CENTER" spacing="0" style="-fx-background-color: transparent;">
               <children>
                  <ToggleButton fx:id="signinToggleButton" onAction="#handleSignInToggle" prefWidth="120.0" selected="true" style="-fx-background-radius: 15 0 0 15; -fx-padding: 10; -fx-background-color: white; -fx-text-fill: black; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.4), 8, 0.5, 0, 0);" text="Sign In" />
                  <ToggleButton fx:id="signUpToggleButton" onAction="#handleSignUpToggle" prefWidth="120.0" style="-fx-background-radius: 0 15 15 0; -fx-padding: 10; -fx-background-color: white; -fx-text-fill: black; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.4), 8, 0.5, 0, 0);" text="Sign Up" />
               </children>
            </HBox>
            <Region prefHeight="142.0" prefWidth="460.0" />
            <TextField fx:id="phoneField" maxWidth="400.0" promptText="Phone Number" styleClass="textField" stylesheets="@../styles/mainStyles.css" />
            <PasswordField fx:id="passwordField" maxWidth="400.0" promptText="Password" styleClass="textField" stylesheets="@../styles/mainStyles.css" />
            <Region prefHeight="110.0" prefWidth="460.0" />
            <Region prefHeight="63.0" prefWidth="460.0" />
            <Button fx:id="signinButton" onAction="#handleSignInButton" prefWidth="200.0" styleClass="primaryButton" stylesheets="@../styles/mainStyles.css" text="Sign in" />
            <Region prefHeight="67.0" prefWidth="460.0" />
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
   </children>
</HBox>
